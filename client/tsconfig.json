{
  "compilerOptions": {
    "outDir": "./build/",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "removeComments": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
}
